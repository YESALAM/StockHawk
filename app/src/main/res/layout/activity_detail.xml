<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.alam.sadar.stockhawk.ui.DetailActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_card"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="10dp"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="7"
            android:padding="5dp"
            >
            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:text="Stock Symbol"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/stock_symbol_detail"
                tools:text="TSLA"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:text="Company Name"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/company_name_detail"
                tools:text="Tesla Motors,Inc."
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:text="Stock Name"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/stock_name_detail"
                tools:text="NMS"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:text="First Trade"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/first_trade_detail"
                tools:text="29/06/2009"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:text="Last Trade"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="4"
                android:id="@+id/last_trade_detail"
                tools:text="08/07/2019"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="5"
                android:text="Currency"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="5"
                android:id="@+id/currency_detail"
                tools:text="USD"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="0"
                android:layout_row="6"
                android:text="Bid Price"
                android:layout_columnWeight="1"
                />
            <TextView
                android:layout_column="1"
                android:layout_row="6"
                android:id="@+id/bid_price_detail"
                tools:text="214.06"
                android:layout_columnWeight="1"
                />
        </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
